<% provide(:title, "Categories") %>
<div class="container mt-5">
    <% if flash[:notice] %>
        <div class="alert alert-success">
            <%= notice %>
        </div>
    <% end %>
    
    <div class="card">
	    <div class="card-header">
	        <div class="row">
		        <div class="col-lg-6">
		            <h3>Admin | Categories</h3>
		        </div>
		        <div class="col-lg-6">
		            <%= link_to "Add Category", new_admin_category_path, class: 'btn btn-info pull-right' %>
		        </div>
	        </div>
	    </div>
	    <table class="table table-hover">
	        <thead>
		        <tr>
                    <th>Title</th>
                    <th>Description</th>
                    <th>Words</th>
                    <th></th>
		        </tr>
	        </thead>
	        <tbody>
                <% @categories.each do |category| %>
                    <tr>
                        <td><%= category.title %></td>
                        <td><%= category.description %></td>
                        <td><%= category.words.size %></td>
                        <td>
                            <%= link_to admin_category_words_path(category_id: category.id), class: 'btn btn-rounded' do %>
                                <i class="fa fa-plus text-muted"></i>
                            <% end %>

                            <%= link_to edit_admin_category_path(category), class: 'btn btn-rounded' do %>
                                <i class="fa fa-pencil-alt text-muted"></i>
                            <% end %>

                            <%= link_to admin_category_path(category),  method: :delete, 
                                                                        data: { confirm: 'Are you sure?' }, 
                                                                        class: 'btn btn-rounded' do %>
                                <i class="fa fa-trash-alt text-muted"></i>
                            <% end %>
                        </td>
                    </tr>
                <% end %>
	        </tbody>
	    </table>
        <div class="card-footer">
            <div class="pagination justify-content-center">
                <%= paginate @categories, window: 1 %>
            </div>
        </div>
    </div>
</div>