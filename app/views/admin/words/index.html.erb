<div class="container mt-4">
    <% if flash[:notice] %>
        <div class="alert alert-success">
            <%= notice %>
        </div>
    <% end %>
    <div class="card">
        <div class="card-header">
            <div class="row">
                <div class="col-lg-6">
                    <h3>Admin | Categories</h3>
                </div>
                <div class="col-lg-6 text-right">
                    <%= link_to "Add Word", new_admin_category_word_path(category_id: @category.id), class: 'btn btn-info' %>
                    <%= link_to "Back", admin_categories_path, class: 'btn btn-link' %>
                </div>
            </div>
        </div>
        <div>
        </div>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Words</th>
                    <th>Answer</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
            <% if @word.any? %>
                <% @word.each do |word| %> 
                    <tr>
                        <td><%= word.content %></td>
                        <td><%= word.correct_choice.content%></td>
                        <td>
                            <%= link_to edit_admin_category_word_path(category_id: @category.id, id: word.id), class: 'btn btn-rounded' do %>
                                <i class="fa fa-pencil-alt text-muted"></i>
                            <% end %>

                            <%= link_to admin_category_word_path(@category, word),  method: :delete, 
                                                                        data: { confirm: 'Are you sure?' }, 
                                                                        class: 'btn btn-rounded' do %>
                                <i class="fa fa-trash-alt text-muted"></i>
                            <% end %>
                        </td>
                    </tr>
                <% end %>
            <% else %>
                <tr>
                    <td class="text-center text-muted" colspan="3">Nothing to show</td>
                </tr>
            <% end %>
            </tbody>
        </table>
    </div>
</div>