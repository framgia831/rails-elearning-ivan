<div class="container mt-5">
    <div class="row">
        <div class="col-lg-3">
            <div class="card">
                <div class="card-body text-center">
                    <div class="container">
                        <%= user_avatar(current_user, 'profile-avatar mx-auto d-block') %>
                        <h5><%= current_user.name %></h5>
                        <hr>
                        <div class="row">
                            <div class="col-lg-6">
                                <strong><%= link_to current_user.following.count, "#" %></strong>
                                <div>following</div>
                            </div>
                            <div class="col-lg-6">
                                <strong><%= link_to current_user.followers.count, "#" %></strong>
                                <div>followers</div>
                            </div>
                        </div>
                            <hr>
                        <div class="row">
                            <div class="col-lg-12">
                                <strong><%= link_to current_user.words_learned, words_path %></strong>
                                <div>Words learned</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-9">
            <div class="card">
                <div class="card-header">
                    <div class="row">
                        <div class="col-lg-6">
                            <h6>Words Learned</h6>  
                        </div>
                        <div class="col-lg-6">
                            <%= link_to "Back to Dashboard", dashboard_path, class: 'btn btn-link pull-right' %>
                        </div>
                    </div>
                </div>
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Word</th>
                            <th>Answer</th>
                            <th>Your Answer</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% @lessons.each do |lesson| %>
                            <% lesson.learned_words.each do |answers| %>
                                <tr>
                                    <td><%= answers.word.content %></td>
                                    <td><%= answers.content %></td>
                                    <td><%= answers.content %></td>
                                    <td><%= %></td>
                                </tr>
                            <% end %>
                        <% end %>
                    </tbody>
                </table>
                <div class="pagination justify-content-center">
                    <%= paginate @lessons, window: 1 %>
                </div>
            </div>
        </div>
    </div>
</div>